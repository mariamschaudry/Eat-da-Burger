<div class = "row">

  <center><img src="/assets/images/burgerhome.jpeg" alt = "Burger"></center>   
  <h1 data-text = "Eat-da-Veggie-Burger!">Eat-da-Veggie-Burger!</h1>

</div>

<div class = "row" id = "bothBoxes">

    {{!-- Left Side (Ready to Eat) --}}
    
    <div class = "col-md-6" id = "readyToEat">
        <h4>Ready to Eat!</h4>

        {{!-- Dynamically Insert Ready Burgers Here  --}}
        {{#each burgers}}
            {{#unless this.devoured}}
            <br>
            <div class = "burger">
                <div class = "order">
                    {{this.burger_name}}
                </div>
            </div>
            <div>
                <form action = "/{{this.id}}?_method=PUT" method = "POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit" class="devour">Devour it!</button>
                {{!-- <a class="waves-effect waves-light btn" id = "button">Devour it!</a> --}}
                </form>
            </div>
            {{/unless}}
        {{/each}}
    </div>

    {{!-- Right Side (Already Eaten)  --}}
    <div class = "col-md-6" id = "alreadyAte">
        <h4>Already Eaten!</h4>

        {{!-- Dynamically Insert Ready Burgers Here  --}}
        {{#each burgers}}
                    {{#if this.devoured}}
                        <div class="devouredBurgers">
                            <div class = "order">
                            {{this.burger_name}}
                            </div>
                        </div>
                        <div>
                           <form action = "/{{this.id}}?_method=PUT" method = "POST">
                           <input type="hidden" name="devoured" value="false">
                            <button type="submit" class="order-again">Order it Again!</button>
                             {{!-- <a class="waves-effect waves-light btn" id = "button">Order it Again!</a> --}}
                           </form>
                        </div>
                    {{/if}}
                {{/each}}
            </div>
        </div>

